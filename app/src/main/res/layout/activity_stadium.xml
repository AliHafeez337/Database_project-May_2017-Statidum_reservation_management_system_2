<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ali.stadiumreservationmanagementsystem.Stadium">


    <TextView
        android:id="@+id/txt2"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/txt3"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/txt6"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt5"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/txt8"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txt9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt7"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt10"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Stadium ID"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="29dp" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Stadium Name"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        tools:layout_editor_absoluteX="29dp" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Stadium Address"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@+id/txt4"
        tools:layout_editor_absoluteX="29dp" />

    <TextView
        android:id="@+id/txt7"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="No of Seats"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt6" />

    <TextView
        android:id="@+id/txt9"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="8dp"
        android:text="No of Parkings"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
